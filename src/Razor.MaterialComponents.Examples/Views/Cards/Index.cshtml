<mdc-grid>
    <mdc-grid-inner>
        <mdc-grid-cell span=3>
            <mdc-card>
                <mdc-card-primary-action>
                    <mdc-card-media media-size=SixteenNine>    
                    </mdc-card-media>
                    <mdc-card-ripple></mdc-card-ripple>
                </mdc-card-primary-action>
                <mdc-card-wrapper-text-section>
                    <h6 class="mdc-typography--headline6">Elevated 16:9</h6>
                </mdc-card-wrapper-text-section>
                <mdc-card-wrapper-text-section>
                    <p class="mdc-typography--body2">Sub text</p>
                </mdc-card-wrapper-text-section>
            </mdc-card>
        </mdc-grid-cell>

        <mdc-grid-cell span=3>
            <mdc-card card-type=Outlined>
                <mdc-card-primary-action>
                    <mdc-card-media media-size=SixteenNine>
                    </mdc-card-media>
                    <mdc-card-ripple></mdc-card-ripple>
                </mdc-card-primary-action>
                <mdc-card-wrapper-text-section>
                    <h6 class="mdc-typography--headline6">Outlined 16:9</h6>
                </mdc-card-wrapper-text-section>
                <mdc-card-wrapper-text-section>
                    <p class="mdc-typography--body2">Sub text</p>
                </mdc-card-wrapper-text-section>
            </mdc-card>
        </mdc-grid-cell>

        <mdc-grid-cell span=3>
            <mdc-card>
                <mdc-card-primary-action>
                    <mdc-card-media media-size=Square>
                    </mdc-card-media>
                    <mdc-card-ripple></mdc-card-ripple>
                </mdc-card-primary-action> 
                <mdc-card-wrapper-text-section>
                    <h6 class="mdc-typography--headline6">Outlined square</h6>
                </mdc-card-wrapper-text-section>
                <mdc-card-wrapper-text-section>
                    <p class="mdc-typography--body2">Sub text</p>
                </mdc-card-wrapper-text-section>
            </mdc-card>
        </mdc-grid-cell>

        <mdc-grid-cell span=3>
            <mdc-card>
                <mdc-card-primary-action>
                    <mdc-card-media media-size=SixteenNine>
                    </mdc-card-media>
                    <mdc-card-ripple></mdc-card-ripple>
                </mdc-card-primary-action>
                <mdc-card-wrapper-text-section>
                    <h6 class="mdc-typography--headline6">With actions</h6>
                </mdc-card-wrapper-text-section>
                <mdc-card-wrapper-text-section>
                    <p class="mdc-typography--body2">Sub text</p>
                </mdc-card-wrapper-text-section>
                <mdc-card-actions>
                    <mdc-card-action-buttons>
                        <mdc-card-action-button ripple label="Action 1">
                        </mdc-card-action-button>
                        <mdc-card-action-button ripple label="Action 2">
                        </mdc-card-action-button>
                    </mdc-card-action-buttons>
                    <mdc-card-action-icons>
                        <mdc-card-action-icon-button ripple title="Share">share</mdc-card-action-icon-button>
                        <mdc-card-action-icon-button ripple title="More options">more_vert</mdc-card-action-icon-button>
                    </mdc-card-action-icons>
                </mdc-card-actions>
            </mdc-card>
        </mdc-grid-cell>
        <mdc-grid-cell span=3>
            <mdc-card>
                <mdc-card-primary-action>
                    <mdc-card-media media-size=SixteenNine>
                        <mdc-card-media-content>
                            <mdc-card-wrapper-text-section>
                                <p class="mdc-typography--overline">Media</p>
                            </mdc-card-wrapper-text-section>
                        </mdc-card-media-content>
                    </mdc-card-media>
                    <mdc-card-ripple></mdc-card-ripple>
                </mdc-card-primary-action>
                <mdc-card-wrapper-text-section>
                    <h6 class="mdc-typography--headline6">With media content</h6>
                </mdc-card-wrapper-text-section>
                <mdc-card-wrapper-text-section>
                    <p class="mdc-typography--body2">Sub text</p>
                </mdc-card-wrapper-text-section>
            </mdc-card>
        </mdc-grid-cell>
        
        <mdc-grid-cell span=3>
            <mdc-card>
                <mdc-card-content>
                    <mdc-data-table>
                        <mdc-data-table-container>
                            <mdc-data-table-inner label="Data table">
                                <mdc-data-table-header>
                                    <mdc-data-table-header-row>
                                        <mdc-data-table-header-cell>Header1</mdc-data-table-header-cell>
                                        <mdc-data-table-header-cell>Header2</mdc-data-table-header-cell>
                                        <mdc-data-table-header-cell>Header3</mdc-data-table-header-cell>
                                    </mdc-data-table-header-row>
                                </mdc-data-table-header>
                                <mdc-data-table-body>
                                    <mdc-data-table-body-row>
                                        <mdc-data-table-body-cell key>Value11</mdc-data-table-body-cell>
                                        <mdc-data-table-body-cell key>Value21</mdc-data-table-body-cell>
                                        <mdc-data-table-body-cell key>Value31</mdc-data-table-body-cell>
                                    </mdc-data-table-body-row>
                                    <mdc-data-table-body-row>
                                        <mdc-data-table-body-cell key>Value12</mdc-data-table-body-cell>
                                        <mdc-data-table-body-cell key>Value22</mdc-data-table-body-cell>
                                        <mdc-data-table-body-cell key>Value32</mdc-data-table-body-cell>
                                    </mdc-data-table-body-row>
                                </mdc-data-table-body>
                            </mdc-data-table-inner>
                        </mdc-data-table-container>
                    </mdc-data-table>
                </mdc-card-content>
                <mdc-card-wrapper-text-section>
                    <h6 class="mdc-typography--headline6">With data table content</h6>
                </mdc-card-wrapper-text-section>
                <mdc-card-wrapper-text-section>
                    <p class="mdc-typography--body2">Sub text</p>
                </mdc-card-wrapper-text-section>
            </mdc-card>
        </mdc-grid-cell>
        
    </mdc-grid-inner>
</mdc-grid>