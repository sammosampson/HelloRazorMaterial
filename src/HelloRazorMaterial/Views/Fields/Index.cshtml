@model FieldsModel
<mdc-grid>
    <mdc-grid-inner>
        <mdc-grid-cell span=12>
            <mdc-field 
                id="outlined-text-field" 
                label="Outlined" 
                field-type=Text>
            </mdc-field>
        </mdc-grid-cell>
        <mdc-grid-cell span=12>
            <mdc-field 
                id="filled-text-field" 
                label="Filled" 
                field-type=Text 
                variant=Filled>
            </mdc-field>
        </mdc-grid-cell>
        <mdc-grid-cell span=12>
            <mdc-select 
                id="outlined-select-field" 
                label="Outlined"
                items=@Model.Options>
            </mdc-select>
        </mdc-grid-cell>
        <mdc-grid-cell span=12>
            <mdc-select 
                id="filled-select-field" 
                label="Filled"
                items=@Model.Options
                variant=Filled>
            </mdc-select>
        </mdc-grid-cell>
    </mdc-grid-inner>
</mdc-grid>