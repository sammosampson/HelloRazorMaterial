@model ChartsModel
<mdc-grid>
    <mdc-grid-inner>
        <mdc-grid-cell span=12>
            <mdc-card>
                <form asp-controller=@nameof(Charts) method="get">
                    <mdc-grid>
                        <mdc-grid-inner>
                            <mdc-grid-cell span=12>
                                <mdc-select 
                                    id="from-month"
                                    label="Select from month"
                                    name="From"
                                    for=@Model.From
                                    items="@Model.Months">
                                </mdc-select>
                            </mdc-grid-cell>
                            <mdc-grid-cell span=12>
                                <mdc-select 
                                    id="to-month"
                                    label="Select to month"
                                    name="To"
                                    for=@Model.To
                                    items="@Model.Months">
                                </mdc-select>
                            </mdc-grid-cell>
                            <mdc-grid-cell span=12>
                                <mdc-button
                                    id="refresh"
                                    button-type=Raised
                                    label="Refresh">
                                </mdc-button>
                            </mdc-grid-cell>
                        </mdc-grid-inner>
                    </mdc-grid>
                </form>
            </mdc-card>
        </mdc-grid-cell>
        <mdc-grid-cell>
            <mdc-card>
                <chartjs-chart id="doughnut"></chartjs-chart>
            </mdc-card>
        </mdc-grid-cell>
        <mdc-grid-cell>
            <mdc-card>
                <chartjs-chart id="pie"></chartjs-chart>
            </mdc-card>
        </mdc-grid-cell>
        <mdc-grid-cell>
            <mdc-card>
                <chartjs-chart id="line"></chartjs-chart>
            </mdc-card>
        </mdc-grid-cell>
        <mdc-grid-cell>
            <mdc-card>
                <chartjs-chart id="bar"></chartjs-chart>
            </mdc-card>
        </mdc-grid-cell>
    </mdc-grid-inner>
</mdc-grid>

@section Scripts {
    <script>
        hookup_charts(
        @Html.Raw(Model.Labels.ToJson()),
        @Html.Raw(Model.Colours.ToJson()),
        @Html.Raw(Model.Data.ToJson()));
    </script>
}
