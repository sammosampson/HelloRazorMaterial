<mdc-grid>
    <mdc-grid-inner>
        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-text-button"
                label="Text Button">
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-button-raised"
                label="Raised button"
                button-type=Raised>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-ripple-button"
                label="Ripple button"
                focus-ring
                ripple>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-ripple-button-raised"
                label="Ripple button raised"
                focus-ring
                ripple
                button-type=Raised>
            </mdc-button>
        </mdc-grid-cell>
        
        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-ripple-button-oulined"
                label="Ripple button outlined"
                focus-ring
                ripple
                button-type=Outlined>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-ripple-button-accessible"
                label="Ripple button accessible"
                focus-ring
                ripple
                touch>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-button-plus-leading-icon"
                label="Button plus leading icon"
                icon-type=Leading
                icon="bookmark"
                focus-ring
                ripple>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-button-plus-trailing-icon"
                label="Button plus trailing icon"
                icon-type=Trailing
                icon="bookmark"
                focus-ring
                ripple>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-outlined-button-plus-leading-icon"
                label="Outlined button plus leading icon"
                icon-type=Leading
                icon="bookmark"
                focus-ring
                ripple
                button-type=Outlined>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-outlined-button-plus-trailing-icon"
                label="Outlined button plus trailing icon"
                icon-type=Trailing
                icon="bookmark"
                focus-ring
                ripple
                button-type=Outlined>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-raised-plus-leading-icon-button"
                label="Raised button plus leading icon"
                icon-type=Leading
                icon="bookmark"
                focus-ring
                ripple
                button-type=Raised>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-raised-plus-trailing-icon-button"
                label="Raised button plus trailing icon"
                icon-type=Trailing
                icon="bookmark"
                focus-ring
                ripple
                button-type=Raised>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-button 
                id="mdc-diabled-button"
                label="Disabled button"
                focus-ring
                ripple
                button-type=Raised
                disabled>
            </mdc-button>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-fab id="mdc-fab" icon="favorite" label="Favorite">
            </mdc-fab>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-fab id="mdc-fab-mini" fab-type=Mini icon="favorite" label="Favorite">
            </mdc-fab>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-fab id="mdc-fab-extended" fab-type=Extended icon="add" label="Create">
            </mdc-fab>
        </mdc-grid-cell>

        <mdc-grid-cell span=12>
            <mdc-fab id="mdc-fab-touch" touch icon="add" label="Create">
            </mdc-fab>
        </mdc-grid-cell>
    </mdc-grid-inner>
</mdc-grid>