<mdc-banner id="banner" centered>
    <mdc-banner-fixed>
        <mdc-banner-content>
            <mdc-banner-graphic-text-wrapper>
                <mdc-banner-graphic>
                    <mdc-banner-icon>error_outline</mdc-banner-icon>
                </mdc-banner-graphic>
                <mdc-banner-text>There was a problem processing a transaction on your credit card.</mdc-banner-text>
            </mdc-banner-graphic-text-wrapper>
            <mdc-banner-actions>
                <mdc-banner-action type="Secondary" ripple label="Learn more"></mdc-banner-action>
                <mdc-banner-action type="Primary" ripple label="Fix it"></mdc-banner-action>
            </mdc-banner-actions>
        </mdc-banner-content>
    </mdc-banner-fixed>
</mdc-banner>
